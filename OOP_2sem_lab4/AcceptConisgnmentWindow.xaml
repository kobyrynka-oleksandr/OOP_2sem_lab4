<Window x:Class="OOP_2sem_lab4.AcceptConisgnmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_2sem_lab4"
        mc:Ignorable="d"
        Title="AcceptConisgnmentWindow" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Label Content="Склад:" VerticalAlignment="Center" FontSize="15"/>
            <ComboBox x:Name="StorageComboBox" Width="200" Height="30" Margin="0,0,10,0"/>
        </StackPanel>

        <Button Click="Accept_Click" Grid.Row="3" Content="Прийняти партію" FontWeight="Medium" FontSize="17" Height="50" Width="160" Background="Transparent" BorderBrush="Black"/>

    </Grid>
</Window>
