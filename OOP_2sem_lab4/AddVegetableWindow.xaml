<Window x:Class="OOP_2sem_lab4.AddVegetableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_2sem_lab4"
        mc:Ignorable="d"
        Title="AddVegetableWindow" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Label Content="Назва:" VerticalAlignment="Center" FontSize="15"/>
            <TextBox x:Name="Name" Width="150" Height="20" Margin="0,0,10,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Label Content="Країна походження:" VerticalAlignment="Center" FontSize="15"/>
            <TextBox x:Name="Country" Width="150" Height="20" Margin="0,0,10,0"/>
        </StackPanel>

        <Button Click="Add_Click" Grid.Row="3" Content="Додати" FontWeight="Medium" FontSize="17" Height="50" Width="140" Background="Transparent" BorderBrush="Black"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Label Content="Номер сезону визрівння:" VerticalAlignment="Center" FontSize="15"/>
            <TextBox x:Name="NumOfSeason" Width="150" Height="20" Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>
